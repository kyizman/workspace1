		// TODO Auto-generated method stub
		
		Scanner input = new Scanner(System.in);
	System.out.println("Enter a number that is less than 1000 (positive)");
	int x = input.nextInt();
	
	 int sum = 0;
	while (x !=0);
	
	x = x % 10;
 x /=10;
 
 System.out.println(" the sum of the diggits is" + x);
	}
	}
	}

